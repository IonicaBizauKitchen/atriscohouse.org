text-color = #553a2a

body

  font-family 'Droid Serif', 'Georgia', 'Bitter', 'Kreon', 'Vollkorn', serif
  // background rgba(214, 171, 101, 0.49)
  background rgba(204, 192, 167, 0.49)
  color text-color
  margin 0
  padding 20px
  font-size 18px
  font-weight 400

section
  position relative
  margin 0 auto
  max-width 700px


a
  color #c6430b
  text-decoration none
  &:hover
    text-decoration underline

hgroup
  margin 40px 0 40px 0

h1, h2, h3
  // font-weight normal
  font-weight 700
  text-align center

h1, h2
  margin 0
  padding 0

h1
  font-size 42px
  line-height 1

h2
  font-size 22px
  // text-transform uppercase
  line-height 2
  opacity 0.6
  font-weight 400
  em
    font-weight 400
    font-size 18px

h3
  margin 50px 0 10px 0
  padding 0
  // border-bottom 2px solid text-color
  // margin-bottom -20px

h3:before
	content "boo"
	display block
	border-top solid 1px black
	width 100%
	height 100px
	position absolute
	top 50%
	z-index 1


h3 span
	background #fff
	padding 0 20px
	position relative
	z-index 5

p, li
  line-height 1.5

img
  // border 4px solid white
  max-width 100%
  width 100%
  border-radius 4px
  margin 0 0 20px 0
  box-shadow 0px 3px 20px 0px rgba(50, 50, 50, 0.5)

a.img
  display block
  margin 30px 0 50px 0
  text-align center
