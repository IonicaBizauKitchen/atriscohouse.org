text-color = #553a2a
text-font-size = 18px

html, body
  margin 0
  padding 0

body
  font-family 'Droid Serif', 'Georgia', 'Bitter', 'Kreon', 'Vollkorn', serif
  background #E8E0D8
  color text-color
  font-size text-font-size
  font-weight 400
  position relative

section
  position relative
  margin 0 auto
  max-width 1000px

a
  color #c6430b
  text-decoration underline
  &:hover
    text-decoration underline

#splash
  display block
  background black no-repeat center center
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover
  width 100%
  height 100%
  margin 0
  padding 0
  position relative

hgroup
  max-width 500px
  position absolute
  // background white
  padding 20px
  top 50%
  left 50%
  transform translate(-50%, -120%)
  h1,h2,h3
    color white
    text-shadow 1px 1px 20px black, 0 0 40px black, 0 0 20px black
    a
      color white
      &:hover
        text-decoration none
  h1
    font-size 72px
    line-height 1
    a
      text-decoration none

h1, h2, h3
  font-family 'Alegreya SC', serif
  font-weight 400
  text-align center
  margin 0
  padding 0

h2
  font-size 26px
  line-height 2
  em
    font-weight 400
    font-size 22px
    font-style normal

h3
  font-size 26px
  margin 100px 0 10px 0
  padding 0
  a
    color text-color
    text-decoration none

h3:before
	display block
	border-top solid 1px black
	width 100%
	height 100px
	position absolute
	top 50%
	z-index 1


h3 span
	background #fff
	padding 0 20px
	position relative
	z-index 5

p, li
  line-height 1.5

img
  max-width 100%
  width 100%
  border-radius 4px
  margin 0 0 20px 0
  box-shadow 0px 3px 20px 0px rgba(50, 50, 50, 0.5)

a.img
  display block
  margin 30px 0 50px 0
  text-align center

#map
  border 8px solid white
  overflow hidden
  box-shadow 0px 2px 8px 0px rgba(50, 50, 50, 0.5)
  margin 60px 0 100px 0

table
  width 100%
  tr

  td
    padding 8px 0
    line-height 2
    border-bottom 1px solid rgba(text-color, 0.2)
    font-size text-font-size


footer
  margin 20px 0 80px 0
